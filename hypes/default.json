{
    "data": {
        "train_idl": "./data/brainwash/brainwash_train.idl",
        "test_idl": "./data/brainwash/brainwash_val.idl",
        "truncate_data": false
    },
    "arch": {
        "use_lstm": false,
        "use_dropout": true, 
        "image_width": 640, 
        "image_height": 480,
        "grid_height": 15, 
        "grid_width": 20,
        "batch_size": 1, 
        "region_size": 32,
        "lstm_size": 200,
        "num_classes": 2,
        "rnn_len": 1
    }, 
    "logging": {
        "display_iter": 50,
        "save_iter": 10000
    },
    "solver": {
        "opt": "RMS",
        "use_jitter": false,
        "rnd_seed": 1,
        "epsilon": 0.00001, 
        "learning_rate": 0.001, 
        "learning_rate_step": 7500, 
        "weights": "",
        "head_weights": [1.0, 0.1]
    }
}
